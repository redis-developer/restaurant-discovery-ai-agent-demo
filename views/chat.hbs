                        <i class="fas fa-sign-out-alt"></i>
                    </button>
                    <button class="brutal-minimize-chat" id="minimizeChat">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>

            <div class="brutal-chat-content">
                <div id="chat-messages" class="brutal-chat-messages">
