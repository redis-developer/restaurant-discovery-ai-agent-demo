    <!-- Featured Restaurants -->
    <section class="brutal-featured-section">
        <h3>FEATURED RESTAURANTS</h3>
        <div class="brutal-restaurants-grid">
            <div class="brutal-restaurant-card">
                <div class="brutal-restaurant-image">üçõ</div>
