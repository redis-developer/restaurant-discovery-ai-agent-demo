            <div class="brutal-hero-features">
                <div class="brutal-feature">
                    <i class="fas fa-robot"></i>
                    <span>AI DINING ASSISTANT</span>
                </div>
                <div class="brutal-feature">
                    <i class="fas fa-calendar-check"></i>
                    <span>INSTANT RESERVATIONS</span>
                </div>
                <div class="brutal-feature">
                    <i class="fas fa-star"></i>
                    <span>CURATED REVIEWS</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Restaurant Categories -->
