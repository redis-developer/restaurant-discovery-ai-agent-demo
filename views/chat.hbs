    <!-- Primary Meta Tags -->
    <meta name="title" content="{{app_name}} - Restaurant Discovery & Reservations">
    <meta name="description" content="Discover amazing restaurants and book tables with AI dining assistant.">
    <meta name="keywords" content="Restaurants, Dining, AI Assistant, Food, Reservations, Discovery">

    <meta property="title" content="{{app_name}}">
    <meta property="description" content="Discover amazing restaurants and book tables with AI dining assistant.">

    <!-- Open Graph -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://github.com/booleanhunter/relish">
